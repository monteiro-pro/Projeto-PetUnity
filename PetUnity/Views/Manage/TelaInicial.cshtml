@{
    ViewBag.Title = "Início";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <h4>Escolha uma das Tarefas Abaixo.</h4>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <p>@Html.ActionLink("Agendar Visita", "Agendamento", "Manage", new { @Class = "btn btn-default btn-lg btn-block" })</p>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <p>@Html.ActionLink("Cadastar Animal", "CadastroAnimais", "Manage", new { @Class = "btn btn-default btn-lg btn-block" })</p>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <p>@Html.ActionLink("Adotar", "Adocao", "Manage", new { @Class = "btn btn-default btn-lg btn-block" })</p>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <p>@Html.ActionLink("Doar", "Doacao", "Manage", new { @Class = "btn btn-default btn-lg btn-block" })</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <h4>Nossos Serviços:</h4>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <h4>Agendamentos</h4>Agende uma visita à uma de nossas instituições.
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <h4>Cadastro de Animais</h4>Cadastre seu animal para outros adota-lo.
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <h4>Adoções</h4>Adote um de nossos animais.
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <h4>Doações</h4>Você pode nos ajudar doando uma quantia.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}