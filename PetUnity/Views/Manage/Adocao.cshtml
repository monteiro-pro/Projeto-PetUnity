@model PetUnity.Models.AdocaoViewModel
@{
    ViewBag.Title = "Adoçao";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Adocao", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Funcionalidade em Desenvolvimento.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <p>@Html.ActionLink("Voltar", "TelaInicial", "Manage", new { @Class = "btn btn-default" })</p>
            @*<input type="submit" class="btn btn-default" value="Adotar" />*@
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
